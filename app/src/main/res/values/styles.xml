<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Background">
        <item name="android:background">@color/main_background</item>
    </style>
    <style name="BackgroundSetting">
        <item name="android:background">@color/white</item>
    </style>
    <style name="MainPageBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/main_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingText">
        <item name="android:textSize">@dimen/setting_option_size</item>
        <item name="android:layout_marginStart">@dimen/setting_start_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingBtn">
        <item name="android:layout_marginEnd">@dimen/setting_end_margin</item>
        <item name="drawableTint">@color/custom_grey</item>
    </style>
    <style name="PageTitle">
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="BtnBack">
        <item name="tint">@color/black</item>
    </style>
    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/main_blue</item>
    </style>
    <style name="TrackMainTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TrackSubTitle">
        <item name="android:textColor">@color/custom_grey</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="TrackIcon">
        <item name="android:drawableTint">@color/black</item>
    </style>
    <style name="PlaceholderText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RefreshBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="HistoryTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="buttomShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MediaProperty">
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/custom_grey</item>
    </style>

    <style name="MediaPropertyValue">
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MediaTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="MediaBandName">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MediaPlayBtn">
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="MediaImageTrack">
        <item name="android:background">@color/white</item>
    </style>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="searchInput">
        <item name="android:textColor">@color/main_background_night</item>
        <item name="android:textColorHint">@color/custom_grey</item>
        <item name="android:drawableTint">@color/custom_grey</item>
    </style>
    <style name="tableStyle">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="TabBarLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextAppearance">@style/TabAppearance</item>
    </style>

    <style name="TabAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottonNavigation">
        <item name="itemBackground">@color/white</item>
        <item name="itemTextColor">@animator/bottom_nav_item_color</item>
        <item name="itemIconTint">@animator/bottom_nav_item_color</item>
    </style>

    <style name="PlayerIcon">
        <item name="backgroundTint">@color/background_icon</item>
    </style>

    <style name="media_create_new_playlist_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">#AEAFB4</item>
    </style>

    <style name="roundedPlaylistImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="PlaylistTextTitle">
        <item name="android:textSize">@dimen/setting_option_size</item>
        <item name="android:layout_marginStart">@dimen/setting_start_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlayerSheet">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="InputStyle">
        <item name="android:background">@drawable/input_border</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>