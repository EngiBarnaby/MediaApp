<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        >
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height='wrap_content'
            android:textSize="14sp"
            app:drawableLeftCompat="@drawable/left_arrow"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="22sp"
            android:layout_marginStart="28dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/setting_min_size"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            android:textSize="@dimen/setting_option_size"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/setting_start_margin"
            android:textColor="@color/black"
            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/setting_end_margin"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/setting_min_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/setting_start_margin"
            android:text="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_option_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/setting_end_margin"
            app:drawableEndCompat="@drawable/share"
            app:drawableTint="@color/custom_grey" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/setting_min_size"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_to_help"
            android:textSize="@dimen/setting_option_size"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/setting_start_margin"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/setting_end_margin"
            app:drawableEndCompat="@drawable/help"
            app:drawableTint="@color/custom_grey"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/setting_min_size"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_agreement"
            android:textSize="@dimen/setting_option_size"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/setting_start_margin"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/setting_end_margin"
            android:drawableTint="@color/custom_grey"
            app:drawableEndCompat="@drawable/right_arrow"
            />
    </FrameLayout>

</LinearLayout>